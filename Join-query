// Countries who does not any single order

select Country, count(*) orders
from
(select * from
(
SELECT Orders.customerId,  count(*) orders
--Customers.CustomerName,
FROM Orders
group by customerId ) ORD INNER JOIN CUSTOMERs CUST
on ORD.CustomerID = CUST.customerID
)
group by country
union

select country, 0 orders from customers where customerid not in (select distinct CustomerID from orders) group by country

order by orders desc

--select country, count(1) from customers where customerid not in (select distinct CustomerID from orders) group by country
;
